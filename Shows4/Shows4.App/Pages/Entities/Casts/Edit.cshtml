@page
@model Shows4.App.Pages.Entities.Casts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cast</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cast.Id" />
            <div class="form-group">
                <label asp-for="Cast.Name" class="control-label"></label>
                <input asp-for="Cast.Name" class="form-control" />
                <span asp-validation-for="Cast.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cast.DateOfBirth" class="control-label"></label>
                <input asp-for="Cast.DateOfBirth" class="form-control" />
                <span asp-validation-for="Cast.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cast.Gender" class="control-label"></label>
                <select asp-for="Cast.Gender" class="form-control">
                    <option value="Prefiro não responder">Prefiro não responder</option>
                    <option value="Feminino">Feminino</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Agenero">Agenero</option>
                    <option value="Aliagenero">Aliagenero</option>
                    <option value="Androgine">Androgine</option>
                    <option value="Bigenero">Bigenero</option>
                    <option value="Poligenro">Poligenro</option>
                    <option value="Intergenero">Intergenero</option>
                    <option value="Neutro">Neutro</option>
                    <option value="Genderqueer">Genderqueer</option>
                </select>
                <span asp-validation-for="Cast.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cast.CountryId" class="control-label"></label>
                <select asp-for="Cast.CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                <span asp-validation-for="Cast.CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
