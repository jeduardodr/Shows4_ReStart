@page
@model Shows4.App.Pages.Entities.Episodes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Episode</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Episode Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Episode.Number)
        </dd>
        <dt class="col-sm-2">
          Episode Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Episode.Title)
        </dd>
        <dt class="col-sm-2">
           Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Episode.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Episode.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-id="@Model.Episode.SeasonId">Back to List</a>
    </form>
</div>
