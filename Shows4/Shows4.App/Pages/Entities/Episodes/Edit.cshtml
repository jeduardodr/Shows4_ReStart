@page
@model Shows4.App.Pages.Entities.Episodes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Episode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Episode.Id" />
            <div class="form-group">
                <label asp-for="Episode.Title" class="control-label"></label>
                <input asp-for="Episode.Title" class="form-control" />
                <span asp-validation-for="Episode.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Episode.Description" class="control-label"></label>
                <input asp-for="Episode.Description" class="form-control" />
                <span asp-validation-for="Episode.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Episode.Rating" class="control-label"></label>
                <input asp-for="Episode.Rating" class="form-control" />
                <span asp-validation-for="Episode.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Episode.RatingGlobal" class="control-label"></label>
                <input asp-for="Episode.RatingGlobal" class="form-control" />
                <span asp-validation-for="Episode.RatingGlobal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
