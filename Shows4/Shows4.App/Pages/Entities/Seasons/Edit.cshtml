@page
@model Shows4.App.Pages.Entities.Seasons.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Season</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Season.Id" />
            <div class="form-group">
                <label asp-for="Season.Description" class="control-label"></label>
                <input asp-for="Season.Description" class="form-control" />
                <span asp-validation-for="Season.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Season.Rating" class="control-label"></label>
                <input asp-for="Season.Rating" class="form-control" />
                <span asp-validation-for="Season.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Season.RatingGlobal" class="control-label"></label>
                <input asp-for="Season.RatingGlobal" class="form-control" />
                <span asp-validation-for="Season.RatingGlobal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Season.EpisodeId" class="control-label"></label>
                <select asp-for="Season.EpisodeId" class="form-control" asp-items="ViewBag.EpisodeId"></select>
                <span asp-validation-for="Season.EpisodeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
