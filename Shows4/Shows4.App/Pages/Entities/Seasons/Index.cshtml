@page "{id}"

@model Shows4.App.Pages.Entities.Seasons.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Season - @Model.Serie.Title</h1>

<div style="display: flex; justify-content: space-between;">
    <a asp-page="Create" asp-route-id="@Model.Serie.Id" class="btn btn-primary">Create New Season</a>
   
    <a asp-page="../Series/Index" class="btn btn-secondary">Back to seasons</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
               Season Number
            </th>
            <th>
               Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Season) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" asp-route-serieId="@item.SerieId">Edit</a> |
                
                    <a asp-page="./Delete" asp-route-id="@item.Id" asp-route-serieId="@item.SerieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
