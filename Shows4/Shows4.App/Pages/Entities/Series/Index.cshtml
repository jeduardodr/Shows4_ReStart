<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie[0].RatingGlobal)
