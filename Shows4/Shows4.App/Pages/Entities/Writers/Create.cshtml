@page
@model Shows4.App.Pages.Entities.Writers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Writer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Writer.Name" class="control-label"></label>
                <input asp-for="Writer.Name" class="form-control" />
                <span asp-validation-for="Writer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Writer.DateOfBirth" class="control-label"></label>
                <input asp-for="Writer.DateOfBirth" class="form-control" />
                <span asp-validation-for="Writer.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Writer.Gender" class="control-label"></label>
                <select asp-for="Writer.Gender" class="form-control">
                    <option value="Feminino">Feminino</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Prefiro não responder">Prefiro não responder</option>
                    <option value="Agenero">Agenero</option>
                    <option value="Aliagenero">Aliagenero</option>
                    <option value="Androgine">Androgine</option>
                    <option value="Bigenero">Bigenero</option>
                    <option value="Poligenro">Poligenro</option>
                    <option value="Intergenero">Intergenero</option>
                    <option value="Neutro">Neutro</option>
                    <option value="Genderqueer">Genderqueer</option>
                </select>
                <span asp-validation-for="Writer.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Writer.CountryId" class="control-label"></label>
                <select asp-for="Writer.CountryId" class ="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
